<div class="float-right">
  <% if signed_in? %>
    <%= link_to "(#{current_user.name}) Sign out", logout_path, method: "delte" %>
  <% else %>
    <%= link_to 'Sign in', login_path %>
  <% end %>
</div>

<h1>Member Only Posts</h1>

<% @posts.each do |post| %>
  <% if signed_in %>
    <p class="float-right">
      Posted by:
      <%= post.user.name %>
    </p>
  <% end %>
  <h4 class="float-left"><%=post.title %></h4>
  <p class ="clear"><%= post.body %></p>
<% end %>

<% if signed_in? %>
  <%= link_to "Create a Post", new_post_path %>
<% end %>
